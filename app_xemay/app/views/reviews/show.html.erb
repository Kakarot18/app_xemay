<div id="review-show">
  <%= render "show_on_map" %>

  <div class="row border-show">
    <div class="form-group group-show-content">
      <div class="review-user col-md-3">
        <%= @user.name %>
      </div>

      <div class="col-md-9">
        <div class="store-name">
          <h3>Store Name</h3>
          <%= @store.name unless @store.nil?%>
        </div>

        <div class="review-content">
          <%= @review.content %>
        </div>

        <div class="rate-store">
          <b><%= t "rate.rate_now" %></b><br>
        </div>

        <div class="col-md-3">
          <%= t "rate.attitude" %>:
          <%= rating_for @store, "attitude", enable_half: true,
            disable_after_rate: false, cancel: true,
            cancel_hint: t("rate.cancel_hint"), star: 5 %>
        </div>
        <div class="col-md-3">
          <%= t "rate.price" %>:
          <%= rating_for @store, "price", enable_half: true,
            disable_after_rate: false, cancel: true,
            cancel_hint: t("rate.cancel_hint"), star: 5 %>
        </div>
        <div class="col-md-3">
          <%= t "rate.specialize" %>:
          <%= rating_for @store, "specialize", enable_half: true,
            disable_after_rate: false, cancel: true,
            cancel_hint: t("rate.cancel_hint"), star: 5 %>
        </div>
      </div>
    </div>

    <hr>
    <div id="comments" class="comments-block">
      <% @review.comments.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>

      <%= render "comments/form" %>
    </div>
  </div>
</div>
