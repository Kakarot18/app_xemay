<%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track" => false %>

<div id="review-show">
  <%= render "show_on_map" %>

  <div class="row border-show">
    <div class="form-group group-show-content">
      <div class="review-user col-md-2">
        <div>
          <%= link_to @user.name, user_path(@user) %>
        </div>
        <div class="review-avatar">
          <%= image_tag @user.avatar %>
        </div>
      </div>

      <div class="col-md-9">
        <div class="store-name">
          <h3><%= @store.name unless @store.nil?%></h3>
        </div>

        <div class="review-content">
          <%= @review.content %>
        </div>

        <% if @average_rating %>
          <div class="rate-point pull-right">
            <p>
              <%= t "rate.average_rating" %>&nbsp;<b><%= @average_rating %></b>
            </p>
            <p>
              <%= t "rate.total_rater" %>&nbsp;<b><%= @total_rater %></b>
            </p>
          </div>
        <% end %>

        <div class="rate-store">
          <b><%= t "rate.rate_now" %></b><br>
          <%= rating_for @store, "quality", enable_half: false, disable_after_rate: false, cancel: true,
            cancel_hint: t("rate.cancel_hint"), star: 5 %>
        </div>
      </div>
    </div>

    <hr>
    <div id="comments" class="comments-block">
      <% @review.comments.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>

      <%= render "comments/form" %>
    </div>
  </div>
</div>
