<%= f.text_field :name, class: "form-control", require: true,
  required: true, placeholder: t("stores.name") %>
<%= f.text_area :address, rows: 3, class: "form-control",
  required: true, placeholder: t("stores.address") %>
<%= f.telephone_field :phone_number, class: "form-control",
  placeholder: :phone_number %>
<%= f.text_field :owner, class: "form-control",
  placeholder: t("stores.owner") %>
<%= f.label :store_type %>
<%= f.select :store_type, Store.store_types.keys
    .map{|store_type| [store_type.titleize, store_type]},
  {}, {class: "select_store_type"} %>

<div>
  <%= f.fields_for :images do |build_image| %>
    <%= render "image_fields", f: build_image %>
  <% end %>

  <%= link_to_add_fields t("reviews.add_images"), f, :images %>
</div>

<h3><%= t "reviews.products" %></h3>
<div>
  <%= f.fields_for :products do |build_product| %>
    <%= render "product_fields", f: build_product %>
  <% end %>

  <%= link_to_add_fields t("reviews.add_products"), f, :products %>
</div>
