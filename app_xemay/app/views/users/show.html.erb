<p id="notice"><%= notice %></p>
<div id="user-profile">
  <div class="row">
    <div class="form-group">
      <div class="col-md-1 col-md-offset-1">
        <%= image_tag @user.avatar_url, class: "user-avatar" %>
      </div>

      <div class="col-md-8">
        <h2><strong><%= link_to @user.name, user_path(@user) %></strong></h2>

        <% if @user == current_user %>
          <div class="user-action">
            <%= link_to t("profile.edit"), edit_user_registration_path(@user) %>
            <%= link_to t("profile.new_review"), new_review_path %>
          </div>
        <% else %>
          <div class="user-action">
            <%= link_to t("profile.home"), root_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div>
    <% unless @reviews.empty? %>
      <%= render @reviews %>
    <% end %>
  </div>
</div>
